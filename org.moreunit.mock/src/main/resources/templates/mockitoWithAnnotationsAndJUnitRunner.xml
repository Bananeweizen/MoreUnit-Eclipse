<?xml version="1.0" encoding="UTF-8" ?>

<mocking-templates version="1.0">
    <mocking-template
        id="org.moreunit.mock.mockitoWithAnnotationsAndJUnitRunner"
        name="Mockito with annotations and JUnit runner">
        <code-templates>
            <code-template id="mockitoRunnerDeclaration" part="test-class-annotation">
                <pattern><![CDATA[
                    @${runWith:newType(org.junit.runner.RunWith)}(${runner:newType(org.mockito.runners.MockitoJUnitRunner)}.class)
                ]]></pattern>
            </code-template>
            <code-template id="testCaseFieldsDeclaration" part="test-class-fields">
                <pattern><![CDATA[
                    @${mockAnnotation:newType(org.mockito.Mock)} private ${mockObjectType} ${mockObject};
                ]]></pattern>
            </code-template>
            <code-template id="objectCreationWithSetterInjection" part="before-instance-method">
                <pattern><![CDATA[
                    ${objectUnderTestType} ${objectUnderTest} = new ${objectUnderTestType}();
                    ${:set(objectUnderTest, mockObjectType)};
                ]]></pattern>
            </code-template>
        </code-templates>
    </mocking-template>
</mocking-templates>
